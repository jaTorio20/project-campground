<% layout('layouts/boilerplate') %>


  <div class="row justify-content-center otp-vh mt-5">
    <div class="col-md-8 col-xl-4">
      <div class="card shadow">
        <div class="card-body">
          <h5 class="card-title text-center mb-4">Forgot Password</h5>
         
          <form action="/forgot-password" method="POST" class="validated-form" novalidate>
            <div class="mb-3">
              <label class="form-label" for="email">Email</label>
              <input class="form-control shadow-sm" type="email" id="email" name="email" required>
              <div class="invalid-feedback">Please enter your registered email.</div>
            </div>
            
            <button class="btn btn-primary w-100">Send Reset Email</button>
          </form>

          <div class="mt-3 text-center">
            <a href="/login">Back to Login</a>
          </div>
        </div>
      </div>
    </div>
  </div>

