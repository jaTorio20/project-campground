<% layout('layouts/boilerplate') %>

  <div class="row justify-content-center mt-5 otp-vh">
    <div class="col-md-8 col-xl-5">
      <div class="card shadow">
        <div class="card-body">
          <h5 class="card-title text-center mb-4">Reset Password</h5>
          


          <form action="/reset-password/<%=id%>/<%=token%>" method="POST" class="validated-form" novalidate>
            <div class="mb-3">
              <label class="form-label" for="password">New Password</label>
              <input class="form-control shadow-sm" type="password" id="password" name="password" required>
              <div class="invalid-feedback">Please enter your new password.</div>
                <div class="invalid-feedback" id="passwordFeedback">
                  Password must be at least 8 characters and include uppercase, lowercase, and a number.
                </div>
                <div class="valid-feedback">
                  Password meets all requirements
                </div>
            </div>

            <div class="mb-3">
              <label class="form-label" for="passwordConfirmation">Confirm Password</label>
              <input class="form-control shadow-sm" type="password" id="passwordConfirmation" name="confirmPassword" required>
              <div class="invalid-feedback">Passwords must match.</div>
            </div>
            
            <button class="btn btn-primary w-100">Reset Password</button>
          </form>

          <div class="mt-3 text-center">
            <a href="/login">Back to Login</a>
          </div>
        </div>
      </div>
    </div>
  </div>


<script src="/js/passwordReset.js"></script>

<script src="/js/passwordRequirement.js"></script>
