<% layout('layouts/boilerplate') %>

  <div class="row mt-5 mb-5 ms-1 me-2 d-flex justify-content-center">
    <h1 class="text-center">Edit Campground</h1>
    <div class="col-md-7 card p-4">
        <form action="/campgrounds/<%=campground._id%>?_method=PUT" method="POST" novalidate class="validated-form" 
            enctype="multipart/form-data">
            <div class="mb-3">
                <label class="form-label" for="title">Title</label>
                <input class="form-control shadow-sm" type="text" id="title" name="campground[title]"
                    value="<%=campground.title %>" required>

                    <div class="invalid-feedback">
                    Please provide a title
                    </div>
                    <div class="valid-feedback">
                    Looks good!
                    </div>            
                    
            </div>
            <div class="mb-3">
                <label class="form-label" for="location">Location</label>
                <input class="form-control shadow-sm" type="text" id="location" name="campground[location]"
                    value="<%=campground.location %>" required>
                    <div class="invalid-feedback">
                    Please provide a location
                    <div class="valid-feedback">
                    Looks good!
                    </div>                                
            </div>
            <!-- <div class="mb-3">
                <label class="form-label" for="image">Add Images</label>
                <input type="file" name="image" id="image" multiple>
            </div> -->

            <div class="mb-3 mt-3">
                <label class="form-label" for="price">Campground Price</label>
                <div class="input-group">
                    <span class="input-group-text" id="price-label">&#x20B1;</span>
                    <input type="text" class="form-control shadow-sm" id="price" placeholder="0.00" aria-label="price"
                        aria-describedby="price-label" name="campground[price]" value="<%=campground.price %>" required>
                    <div class="invalid-feedback">
                    Please provide a price
                    </div>
                    <div class="valid-feedback">
                    Looks good!
                    </div>                                    
                </div>
            </div>

            <div class="mb-3">
                <label class="form-label" for="description">Description</label>
                <textarea class="form-control shadow-sm" type="text" id="description"
                    name="campground[description]" required><%= campground.description%></textarea>
                    <div class="invalid-feedback">
                    Please provide a description
                    </div>
                    <div class="valid-feedback">
                    Looks good!
                    </div>                                
            </div>
            <div class="mb-3">
                <label for="image" class="form-label">Add more Images</label>
                <input class="form-control" type="file" id="image" name="image" multiple>
                <!-- <div id="filePreview" class="d-flex flex-column gap-2"></div> -->
            </div>
            <div class="mb-3">
                <% campground.images.forEach(function(img, i){ %>
                    <img src="<%=img.thumbnail %>" alt="" class="img-thumbnail">
                    <div class="form-check-inline">
                        <input type="checkbox" id="image-<%=i%>" name="deleteImages[]" value="<%=img.filename%>">
                    </div>
                    <label for="image-<%=i%>">Delete?</label>
                <% }) %>
            </div>
            <div class="mb-3 text-center">
                <button class="btn btn-info w-75">Update Campground</button>
            </div>
        </form>
        <a href="/campgrounds/<%= campground._id%>">Back To Campground</a>
        
    </div>
</div>
