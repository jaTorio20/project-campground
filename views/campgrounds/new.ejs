<% layout('layouts/boilerplate') %>
<div class="row mt-5">
    <h1 class="text-center">New Campground</h1>
    <div class="col-md-6 offset-md-3 card p-4">
        <form action="/campgrounds" method="POST" novalidate class="validated-form" enctype="multipart/form-data">
            <div class="mb-3">
                <label class="form-label" for="title">Title</label>
                <input class="form-control shadow-sm" type="text" id="title" name="campground[title]" required>
                    <div class="invalid-feedback">
                    Please provide a title.
                    </div>
                    <div class="valid-feedback">
                    Looks good!
                    </div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="location">Location</label>
                <input class="form-control shadow-sm" type="text" id="location" name="campground[location]" required>
                    <div class="invalid-feedback">
                    Please provide a location.
                    </div>
                    <div class="valid-feedback">
                    Looks good!
                    </div>
            </div>

            <div class="mb-3">
                <label class="form-label" for="price">Campground Price</label>
                <div class="input-group">
                    <span class="input-group-text" id="price-label">&#x20B1;</span>
                    <input type="text" class="form-control shadow-sm" id="price" placeholder="0.00" aria-label="price"
                        aria-describedby="price-label" name="campground[price]" required>
                    <div class="invalid-feedback">
                    Please provide a price
                    </div>
                    <div class="valid-feedback">
                    Looks good!
                    </div>                  
                </div>
            </div>

            <div class="mb-3">
                <label class="form-label" for="description">Description</label>
                <textarea class="form-control shadow-sm" type="text" id="description" name="campground[description]" required></textarea>
                    <div class="invalid-feedback">
                    Please provide a description
                    </div>
                    <div class="valid-feedback">
                    Looks good!
                    </div>            
            </div>
            <div class="mb-3">
                <label for="image" class="form-label">Upload Images</label><br>
                    <small class="text-muted">Only 'jpg', 'jpeg', 'png' are allowed</small>
                <input class="form-control shadow-sm" type="file" id="image" name="image" multiple required>
                    <div class="invalid-feedback">
                    Please provide an image
                    </div>

                    <div class="valid-feedback">
                    Looks good!
                    </div>  
            </div>

            <% if(currentUser && currentUser.role !== 'admin'){ %>
            <div class="mb-3 d-flex justify-content-center">
                <button class="btn btn-outline-primary shadow-sm w-100" type="submit">Add Campground</button>
            </div>
            <%}%>

        </form>
        <!-- <a href="/campgrounds">All Campgrounds</a> -->
    </div>
</div>

